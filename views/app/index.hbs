<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#leagueCreateModal">
    Create a new League
</button>

<!-- Modal -->
<div class="modal fade" id="leagueCreateModal" tabindex="-1" role="dialog" aria-labelledby="leagueCreateModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="leagueCreateModalLabel">Input League details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="League">League name:</label>
                        <input type="text" class="form-control" id="leagueInputName" aria-describedby="leagueNameHelp"
                            placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="beginDate">Begin date:</label>
                        <input type="date" class="form-control" id="beginDate" placeholder="Date league begins">
                    </div>
                    <div class="form-group">
                        <label for="eDate">End date:</label>
                        <input type="date" class="form-control" id="eDate" placeholder="Date league ends">
                    </div>
                    <div class="form-group">
                        <label for="numberOfTeams">Number of teams in league:</label>
                        <input type="number" class="form-control" id="numberOfTeams" placeholder="Number of teams in league">
                    </div>
                    <a href="/league" type="submit" class="btn btn-primary">Submit</a>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>