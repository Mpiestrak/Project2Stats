<h1>{{league.name}} Standings:</h1>
{{!-- {{log this}} --}}
{{#each league.teams}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    {{!-- {{log this}} --}}
    <h3 class="card-title">{{name}}</h3>
  </div>
</div>
{{/each}}



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#teamCreateModal">
    Add new team
</button>

<!-- Modal -->
<div class="modal fade" id="teamCreateModal" tabindex="-1" role="dialog" aria-labelledby="teamCreateModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="teamCreateModalLabel">Input Team details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/league/league:id/teams" method="POST" class="auth-form">
                    <div>
                        <label>Name of team:</label>
                        <input type="text" name="name" placeholder="Enter Name">
                    </div>
                    <div>
                        <label for="">Team Motto:</label>
                        <input type="text" name="motto" placeholder="Motto">
                    </div>
                    <div>
                        <label for="">Team logo</label>
                        <input type="img" name="logo" placeholder="Logo">
                    </div>
                    <button type="submit">Next:</br>Add Teams</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>