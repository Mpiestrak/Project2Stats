                        <input type="date" name="eDate" placeholder="g">
                    </div>
                    <button type="submit">Submit Changes</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

